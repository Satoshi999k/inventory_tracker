{
  "dashboard": {
    "title": "Inventory Tracker - System Overview",
    "tags": ["inventory-tracker", "system", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "API Gateway - Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"api-gateway\"}[5m])"
          }
        ],
        "type": "graph"
      },
      {
        "title": "API Gateway - Error Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"api-gateway\",status=~\"5..\"}[5m])"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Service Health Status",
        "targets": [
          {
            "expr": "up{job=~\"product-catalog-service|inventory-service|sales-service\"}"
          }
        ],
        "type": "stat"
      },
      {
        "title": "Database Connections",
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected"
          }
        ],
        "type": "gauge"
      },
      {
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))"
          }
        ],
        "type": "gauge"
      },
      {
        "title": "Disk Usage",
        "targets": [
          {
            "expr": "100 * (1 - (node_filesystem_avail_bytes / node_filesystem_size_bytes))"
          }
        ],
        "type": "gauge"
      },
      {
        "title": "Request Latency (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m]))"
          }
        ],
        "type": "stat"
      }
    ]
  }
}
