{
{"name": "inventory/sales-service",
    "description": "Sales Management Microservice",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "SalesService\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8000 index.php",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html=coverage"
    }
}
